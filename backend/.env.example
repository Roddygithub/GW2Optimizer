# ========================================
# Backend Configuration
# ========================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True
ENVIRONMENT=development

# ========================================
# Database
# ========================================
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./gw2optimizer.db

# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/gw2optimizer

# ========================================
# Authentication & Security
# ========================================
# IMPORTANT: Change this in production! Must be at least 32 characters
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# Ollama / Mistral AI
# ========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:latest
OLLAMA_TIMEOUT=120

# ========================================
# Redis Cache
# ========================================
REDIS_ENABLED=True
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# Circuit Breaker for Redis
REDIS_CIRCUIT_BREAKER_MAX_FAILURES=5
REDIS_CIRCUIT_BREAKER_RESET_TIMEOUT=60

# ========================================
# Learning System
# ========================================
LEARNING_ENABLED=True
LEARNING_DATA_DIR=./data/learning
MAX_LEARNING_ITEMS=10000
LEARNING_CLEANUP_DAYS=90

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/gw2optimizer.log
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# Email (for password reset, verification)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@gw2optimizer.com

# ========================================
# Frontend URL (for email links)
# ========================================
FRONTEND_URL=http://localhost:5173

# ========================================
# Monitoring & Metrics
# ========================================
# Sentry Error Tracking (production)
SENTRY_DSN=https://d7067f5675913b468876ace2ce7cfefd@o4510235525120000.ingest.de.sentry.io/4510235538489424

# GW2 API Integration
# Get your API key from: https://account.arena.net/applications
# GW2_API_KEY=your-gw2-api-key

# Mistral AI Integration
# Get your API key from: https://console.mistral.ai/
# MISTRAL_API_KEY=your-mistral-api-key

# Prometheus Metrics
PROMETHEUS_ENABLED=True
