{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "tests/e2e/**/*.ts",
    "playwright.config.ts",
    "src/types/global.d.ts"
  ],
  "exclude": []
}
