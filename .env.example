# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True

# Database Configuration
# Use PostgreSQL for production, SQLite for development
DATABASE_URL=sqlite+aiosqlite:///./gw2optimizer.db
# DATABASE_URL=postgresql://user:password@localhost:5432/gw2optimizer
DATABASE_ECHO=False

# Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Learning Configuration
LEARNING_DATA_DIR=./data/learning
MAX_LEARNING_ITEMS=10000
LEARNING_ENABLED=true

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:latest

DATABASE_PATH=./data/local_db/gw2optimizer.db

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Scraping Configuration
SCRAPER_UPDATE_INTERVAL=604800  # 7 days in seconds
SCRAPER_USER_AGENT=GW2Optimizer/1.0

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/gw2optimizer.log

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME=GW2Optimizer
VITE_APP_VERSION=1.0.0

# GitHub Configuration (for CI/CD)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=yourusername/GW2Optimizer

# Windsurf Deployment
WINDSURF_API_KEY=your_windsurf_api_key_here
WINDSURF_PROJECT_ID=your_windsurf_project_id_here
